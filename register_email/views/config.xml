<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="na_res_config_settings_view_form_email" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="priority" eval="200"/>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='integration']" position="after">


                    <div name="mail_register">
                        <h2>Invio registro per email</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="text-muted">
                                        <p>Imposta i dati per l'invio del report pdf</p>
                                    </div>
                                    <div class="content-group">
                                         <div class="mt16">
                                            <label for="company_id" string="Azienda"/>
                                            <field name="company_id"/>

                                        </div>
                                        <div class="mt16">
                                            <label for="journal_ids" string="Registri"/>
                                            <field name="journal_ids" widget="many2many_tags"/>
                                        </div>
                                        <div class="mt16">
                                            <label for="intervallo"/>
                                            <field name="intervallo"/>gg
                                        </div>
                                        <div class="mt16">
                                            <label for="target_move" />
                                            <field name="target_move"/>
                                        </div>
                                        <div class="mt16">
                                            <label for="template_registri_id" />
                                            <field name="template_registri_id"/>
                                        </div>
                                        <div class="mt16">
                                            <label for="destinatari" />
                                            <field name="destinatari"/>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>



    </data>
</odoo>
