<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product.product.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="hide_in_doc"/>
                        <label for="hide_in_doc"/>
                    </div>
                </xpath>
                <xpath expr="//group[@name='packaging']" position="replace">
                    <group name="box_standard" string="Box standard">
                        <field name="box_standard_id" context="{'form_view_ref': 'sale_product_packaging.template_packaging_form_view'}"/>
                    </group>
                    <group name="box_test" string="Box tester">
                        <field name="box_tester_id" context="{'form_view_ref': 'sale_product_packaging.template_packaging_form_view'}"/>
                    </group>
                </xpath>

            </field>
        </record>
        <record id="product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.product_template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="product_packaging"/>
                        <label for="product_packaging"/>
                    </div>
                    <div>
                        <field name="hide_in_doc"/>
                        <label for="hide_in_doc"/>
                    </div>
                </xpath>
                <xpath expr="//group[@name='packaging']" position="replace">
                    <group name="box_standard" string="Box standard">
                        <field name="box_standard_id" context="{'form_view_ref': 'sale_product_packaging.template_packaging_form_view'}"/>
                    </group>
                    <group name="box_test" string="Box tester">
                        <field name="box_tester_id" context="{'form_view_ref': 'sale_product_packaging.template_packaging_form_view'}"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>