<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_invoice_tree_fatturapa_in" model="ir.ui.view">
        <field name="name">account.invoice.tree.fatturapa_in</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="apply_registration_automatism" string="APPLICA SUGGERIMENTI" type="object" class="btn" />
            </xpath>
            <xpath expr="//field[@name='move_type']" position="after">
                <strong style="color: #875A7B;"><field name="registration_type_descr" readonly="1" force_save="1"/></strong>
            </xpath>
        </field>
    </record>

</odoo>