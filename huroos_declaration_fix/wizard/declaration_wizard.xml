<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="select_manually_declaration_id_wizard" model="ir.ui.view">
        <field name="name">Select Manually Declarations</field>
        <field name="model">l10n_it_declaration_of_intent.select_declarations</field>
        <field name="arch" type="xml">
            <form string="Select Manually Declarations">
                <group>
                    <field name="declaration_of_intent_id" string="scegli la dichiarazione" options="{'no_open': True, 'no_create': True}" />
                </group>
                <footer>
                    <button
                        name="confirm_line"
                        string="Conferma"
                        type="object"
                        class="oe_highlight"
                    />
                    o
                    <button string="Cancella" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="select_manually_declarations_action_line" model="ir.actions.act_window">
        <field name="name">Select Manually Declarations</field>
        <field
            name="res_model"
        >l10n_it_declaration_of_intent.select_declarations</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="select_manually_declaration_id_wizard" />
        <field name="target">new</field>
    </record>
</odoo>