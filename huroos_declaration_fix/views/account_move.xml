<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
                    <button name="select_manually_declarations_line" string="Cambia D. d'intenti" type="object" class="oe_highlight" attrs="{'invisible':[('parent.state','!=','draft')]}"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']" position="before">
                    <button name="select_manually_declaration_for_alline" string="D. d'intenti su righe" type="object" class="oe_highlight" states="draft"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>