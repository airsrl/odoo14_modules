<odoo>
    <data>

        <record model="ir.ui.view" id="hr_recruitment_stage_auto_activities_hr_recruitment_stage_form">
            <field name="name">hr_recruitment_stage_auto_activities_hr_recruitment_stage_form</field>
            <field name="model">hr.recruitment.stage</field>
            <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
            <field name="arch" type="xml">
                <group name="tooltips" position="after">
                    <group>
                        <group name="cron_activities" string="Activities">

                            <field name="cron_activities_ids" widget="one2many" nolabel="1" colspan="2">
                                <tree editable="bottom">
                                    <field name="activity_type_id" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="cron_hours_trigger"/>
                                </tree>
                            </field>
                            <p class="text-muted" colspan="2">The previous activities will be automatically scheduled
                                once the applicant last change update is before the hours specified.
                            </p>
                        </group>
                        <group name="max_stage_alert" string="Alert colors">
                            <field name="last_update_max_stage_yellow_warning"/>
                            <field name="last_update_max_stage_red_warning"/>
                        </group>
                    </group>
                </group>
            </field>
        </record>

    </data>
</odoo>