<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_template_custom_fields" model="ir.ui.view">
            <field name="name">product_template_custom_fields</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="before" >
                    <field name="default_code_padre" />
                </xpath>
                <xpath expr="//field[@name='standard_price']" position="after" >
                    <field name="pubblica_su_ecommerce" />
                    <field name="classe_spedizione" />
                </xpath>
                <xpath expr="//field[@name='description']" position="after">
                   
                    <group string="Descrizione breve" name="description_b">
                        <field name="descrizione_breve" nolabel="1" placeholder="Descrizione breve."/>
                    </group>
                    <group  string="Descrizione lunga" name="description_l">
                        <field name="descrizione_lunga" nolabel="1" placeholder="Descrizione lunga."/>
                    </group>
                   
                </xpath>
            </field>
        </record>

        <record id="view_product_product_custom_fields" model="ir.ui.view">
            <field name="name">product_product_custom_fields</field>
            <field name="model">product.product</field>

            <field name="inherit_id" ref="product.product_variant_easy_edit_view" />
             <field name="arch" type="xml">
                 <xpath expr="//field[@name='barcode']" position="after" >
                    <field name="pubblica_su_ecommerce" />
                </xpath>

<!--                <xpath expr="//field[@name='description']" position="after">-->
<!--                   -->
<!--                    <group string="Descrizione breve" name="description_b">-->
<!--                        <field name="descrizione_breve" nolabel="1" placeholder="Descrizione breve."/>-->
<!--                    </group>-->

<!--                    <group  string="Descrizione lunga" name="description_l">-->
<!--                        <field name="descrizione_lunga" nolabel="1" placeholder="Descrizione lunga."/>-->
<!--                    </group>-->
<!--                    -->
<!--                </xpath>-->
            </field>
        </record>

         <record id="sale_order_custom_fields" model="ir.ui.view">
            <field name="name">sale_order_custom_fields</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree" />
             <field name="arch" type="xml">
                 <xpath expr="//field[@name='amount_total']" position="after" >
                    <field name="wc_amount" string="Totale WC"/>
                </xpath>
             </field>
         </record>

        <record id="sale_order_view_search_inherit_quotation" model="ir.ui.view">
            <field name="name">sale_order_view_search_inherit_quotation</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_sale" />
             <field name="arch" type="xml">
                 <xpath expr="//filter[@name='upselling']" position="after" >
                    <filter string="Differenza Totale WC" name="wc_total_diff" domain="[('wc_total_diff', '=', True)]"/>
                </xpath>
             </field>
         </record>


   </data>
</odoo>
