<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="correct_journal_view" model="ir.ui.view">
            <field name="name">Change Journal Entries</field>
            <field name="model">correct.journal.wizard</field>
            <field name="arch" type="xml">
            <form string="Cambio registro">
                <field name="move_ids" invisible="1"/>
                <field name="new_values" invisible="1"/>
                <field name="suitable_journal_ids" invisible="1"/>
                <group>
                    <group>
                        <field name="new_journal_id" string="Nuovo registro" options="{'no_create':True, 'no_open':True}"/>
                    </group>
                </group>

                <label for="preview_moves" string="Preview modifiche" attrs="{'invisible':[('new_journal_id','=',False)]}"/>
                <field name="preview_moves" widget="account_resequence_widget" attrs="{'invisible':[('new_journal_id','=',False)]}"/>
                <footer>
                    <button string="Conferma" name="change_journal" type="object" default_focus="1" class="btn-primary"  attrs="{'invisible':[('new_journal_id','=',False)]}"/>
                    <button string="Cancella" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
            </field>
        </record>
        <record id="correct_journal_exception_view" model="ir.ui.view">
            <field name="name">Change Journal Entries Exception</field>
            <field name="model">correct.journal.wizard</field>
            <field name="arch" type="xml">
            <form string="Attenzione!">


                <group>
                    <field name="notify_text" readonly="1" widget="html"/>
                </group>
                <footer>
                    <button string="prosegui" name="change_journal" type="object" default_focus="1" class="btn-primary" context="{'checked':True}"/>
                    <button string="Cancella" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
            </field>
        </record>
        <record id="action_correct_journal" model="ir.actions.act_window">
            <field name="name">Cambia registro</field>
            <field name="res_model">correct.journal.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="correct_journal_view"/>
            <field name="target">new</field>
            <field name="groups_id" eval="[(6, 0, [ref('account.group_account_manager'), ref('base.group_system')])]"/>
            <field name="binding_model_id" ref="account.model_account_move" />
            <field name="binding_view_types">list,form</field>
        </record>
    </data>
</odoo>