<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_ddt_change_number_form_view" model="ir.ui.view">
            <field name="name">wizard_ddt_changenumber.form</field>
            <field name="model">wizard.ddt.changenumber</field>
            <field name="arch" type="xml">
                <form string="Cambia sequenza">
                    <sheet>
                            <group>
                                <label for="delivery_note_id" string="Numerazione attuale"/>
                                <div>
                                     <field name="delivery_note_id" readonly="1"/>
                                </div>
                                <label for="number_new" string="Nuova numerazione"/>
                                <div>
                                        <field name="prefix"/><field name="number_new" class="oe_inline"/>
                                </div>
                        </group>
                        <footer>
                            <button name="confirm" string="aggiorna singola DDT" context="{'renumber_sequence':False}" type="object"/>
                            <button name="confirm" string="Aggiorna sequenze DDT" context="{'renumber_sequence':True}" type="object"/>
                            <button special="cancel" string="Cancella" class="oe_link" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

     <record model="ir.actions.server" id="wizard_change_number">
        <field name="name">Cambia numero</field>
        <field name="model_id" ref="l10n_it_delivery_note.model_stock_delivery_note"/>
         <field name="groups_id" eval="[(6,0,[ ref('l10n_it_delivery_note.can_change_number')])]" />
        <field name="binding_model_id" ref="l10n_it_delivery_note.model_stock_delivery_note"/>
        <field name="state">code</field>
         <field name="binding_view_types">form</field>
        <field name="code">
            action = records.button_change_name()
        </field>
    </record>
    </data>
</odoo>