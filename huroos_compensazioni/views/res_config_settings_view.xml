<odoo>
    <record id="huroos_compensazioni_settings" model="ir.ui.view">
            <field name="name">huroos_compensazioni_settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='analytic']" position="after">
                    <h2>Compensazioni</h2>
                    <div class="row mt16 o_settings_container" id="compensazioni">
                        <div class="col-12 col-lg-6 o_setting_box" id="id_journal">
                            <div class="o_setting_right_pane" id="journal">
                                <div class="o_form_label">
                                    Registro di default
                                </div>
                                <field name="journal"/>
                                <div class="text-muted">
                                    Registro di default da utilizzare per le compensazioni
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="credit_account">
                            <div class="o_setting_right_pane" id="credit">
                                <div class="o_form_label">
                                    Conto di credito
                                </div>
                                <field name="credit_account"/>
                                <div class="text-muted">
                                    Conto di credito di default da utilizzare per le compensazioni
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="debit_account">
                            <div class="o_setting_right_pane" id="debit">
                                <div class="o_form_label">
                                    Conto di debito
                                </div>
                                <field name="debit_account"/>
                                <div class="text-muted">
                                    Conto di debito di default da utilizzare per le compensazioni
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
    </record>
</odoo>