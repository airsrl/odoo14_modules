<odoo>
    <record id="huroos_compensazioni_account_payment_register" model="ir.ui.view">
        <field name="name">huroos_compensazioni_account_payment_register</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <field name="partner_bank_id" position="after">
                <field name="show_compensazione"/>
                <field name="compensazione_journal_id" attrs="{'invisible': [('show_compensazione','!=', True)]}"/>
                <field name="bill_ids"
                       widget="many2many_tags"
                       options="{'no_create_edit': True, 'no_create': True}"
                       attrs="{'invisible': [('show_compensazione','!=', True)]}"/>
                <field name="importo_compensazione"
                       attrs="{'invisible': [('show_compensazione','!=', True)]}"/>
            </field>
            <field name="communication" position="after">
                <field name="journal_type" invisible="1"/>
                <field name="account_bank_statement_id"
                       options="{'no_create_edit': True, 'no_create': True}"
                       attrs="{'invisible': [('journal_type','!=','cash')]}"/>
            </field>
        </field>
    </record>
</odoo>