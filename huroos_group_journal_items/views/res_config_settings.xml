<odoo>
    <record id="group_journal_items_settings" model="ir.ui.view">
        <field name="name">group_journal_items_settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='default_taxes_setting_container']" position="after">
                <h2>Registrazioni contabili</h2>
                <div class="row mt16 o_settings_container" name="journal_items_grouped_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="update_journal_items_grouped">
                        <div class="o_setting_left_pane">
                            <field name="journal_items_grouped" widget="upgrade_boolean"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="journal_items_grouped"/>
                            <div class="text-muted" id="update_journal_items_grouped_live">
                                Raggruppa la scritture contabili per conto.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>