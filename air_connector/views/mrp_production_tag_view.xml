<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_production_tag_tree" model="ir.ui.view">
            <field name="name">mrp_production_tag.tree</field>
            <field name="model">mrp.production.tag</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>

        <record id="mrp_production_tag_action" model="ir.actions.act_window">
            <field name="name">Etichette Produzione</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.production.tag</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Etichette Produzione" id="mrp_production_tag_menu" parent="mrp.menu_mrp_configuration" action="mrp_production_tag_action"/>
    </data>
</odoo>