<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="custom_stock_move_line" model="ir.ui.view">
            <field name="name">custom.moveline</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty_done']"  position="replace">
                    <field name="in_out_move" decoration-success="in_out_move &gt; 0" decoration-danger="in_out_move &lt; 0"/>
                </xpath>
                <xpath expr="//field[@name='in_out_move']"  position="after">
                    <field name="movimenti_prodotto"/>
                    <field name="products_value"/>
                </xpath>
            </field>
        </record>
   </data>
</odoo>
