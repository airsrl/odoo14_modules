<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="product_template_kanban_custom" model="ir.ui.view">
            <field name="name">kustom.kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_kanban_stock_view"/>
            <field name="arch" type="xml">
                    <xpath expr="//div[@name='product_lst_price']" position="inside">
                    <div t-if="record.type.raw_value == 'product'">Previste: <field name="virtual_available"/> <field name="uom_id"/></div>
                </xpath>
            </field>
        </record>
   </data>
</odoo>
