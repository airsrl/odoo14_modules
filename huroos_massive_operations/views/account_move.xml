<odoo>
    <data>

        <record id="huroos_view_move_form" model="ir.ui.view">
            <field name="name">huroos_view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="apply_partner_account" string="MODIFICA RIGHE" type="object" class="btn"/>
                </xpath>
                <xpath expr="//form/sheet/notebook" position="before">
                    <group string="Operazioni massive">
                        <group>
                            <field name="am_account_id" string="Conto"/>
                            <field name="am_analytic_account" string="Conto Analitico"/>
                            <field name="am_analytic_tag" string="Etichette Analitiche"/>
                            <field name="select_all_rows" invisible="1"/>
                            <button name="button_select_all_rows" nolabel="1" type="object">
                                <span class="o_stat_text" attrs="{'invisible':[('select_all_rows','=',False)]}">
                                    Rimuovi tutte le righe
                                </span>
                                <span class="o_stat_text" attrs="{'invisible':[('select_all_rows','=',True)]}">
                                    Seleziona tutte le righe
                                </span>
                            </button>

                        </group>
                        <group>
                            <field name="am_tax_id" string="Imposte"/>
                            <field name="am_rda" string="Ritenuta d'acconto"/>
                            <field name="am_rc" string="RC"/>
                            <field name="am_remove_vat" string="Rimuovi Imposte"/>
                            <field name="am_sale_id"/>
                            <field name="am_sale_order_line_id"/>
                            <field name="am_remove_sale_order_line" string="Rimuovi righe d'ordine"/>

                        </group>
                    </group>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
                    <button name="set_selected_row" nolabel="1" type="object" icon="fa-plus"
                            attrs="{'invisible':[('selected_row','=',True)]}"/>
                    <button name="set_selected_row" nolabel="1" type="object" icon="fa-minus"
                            attrs="{'invisible':[('selected_row','!=',True)]}"/>
                    <field name="selected_row" string="#" readonly="1"/>


                </xpath>

            </field>
        </record>


    </data>
</odoo>
