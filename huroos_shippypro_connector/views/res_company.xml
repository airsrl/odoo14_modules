<odoo>
    <data>
        <record model="ir.ui.view" id="huroos_shippypro_connector_res_company">
            <field name="name">huroos_shippypro_connector_res_company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_info']" position="inside">
                    <group>
                        <group string="Shippy PRO">
                            <field name="authentication_code"/>
                            <field name="APIOrdersID"/>
                            <field name="image_url_path" widget="url"/>
                            <field name="shipping_auto_confirm"/>
                            <field name="carrier_id"/>
                            <field name="shippy_pro_carrier_id"/>
                            <field name="delivery_package_type_id"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>