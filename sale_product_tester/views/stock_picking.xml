<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock_picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='description_picking']" position="before">
                    <field name="name"/>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='description_picking']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_stock_move_line_detailed_operation_tree_inherit" model="ir.ui.view">
        <field name="name" >stock.move.line.detailed.operations.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field
            name="inherit_id"
            ref="stock.view_stock_move_line_detailed_operation_tree"
        />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="display_name"/>
            </field>
        </field>
    </record>
    </data>
</odoo>