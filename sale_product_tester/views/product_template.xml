<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="product_tmpl_form_view" model="ir.ui.view">
            <field name="name">product_tmpl_form_tester</field>
            <field name="model">product.template</field>
            <field name="priority">3</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='variants']" position="after">
                    <page name="tester" string="Tester">
                        <group>
                            <field name="allowed_tester"/>
                            <field name="tester_description"/>
                            <field name="tester_price"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>



</odoo>