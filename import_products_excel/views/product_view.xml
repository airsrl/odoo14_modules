<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="custom_product_product_template_only_form_view" model="ir.ui.view">
            <field name="name">custom_product_product_template_only_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="default_code_import" attr="{'invisible': [('product_variant_count', '=', 0)]}" string="Riferimento prod. padre"/>
                </xpath>

            </field>
        </record>
        <!-- Inherit Form View to Modify it -->
        <record id="air_custom_product_template_search_view" model="ir.ui.view">
            <field name="name">air_custom_product_template_search_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">

                <xpath expr="//search" position="inside">
                   <field name="default_code_import" string="Riferimento prodotto padre"/>
                </xpath>

            </field>
        </record>
        <record id="air_custom_product_template_search_form_view_stock" model="ir.ui.view">
            <field name="name">air_custom_product_product_template_search_form_view_stock</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_search_form_view_stock"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='location_id']" position="before">
                   <field name="default_code_import" string="Riferimento prodotto padre"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>