<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="account_reports_view" inherit_id="l10n_it_account.internal_layout">

        <xpath expr="//span[@t-esc='company.partner_id.vat']" position="after">
            <br/>
            <span class="text-right">Codice Fiscale:</span>
            <span t-esc="company.partner_id.fiscalcode"/>
            <br/>

        </xpath>
        <xpath expr="//div[hasclass('header')]" position="attributes">
            <attribute name="style" add=" margin-left: 20px; !important"/>
        </xpath>

    </template>
</odoo>