<odoo>

    <record id="huroos_product_template_only_form_view" model="ir.ui.view">
        <field name="name">huroos_product_template_only_form_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="open_warehouse_valuation" type="object" icon="fa-money" class="oe_stat_button">
                    <field string="Valorizzazione Magazzino" name="warehouse_valuation" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>


</odoo>