<odoo>
    <record model="ir.ui.view" id="api_session_tree_view">
        <field name="name">api.session.tree</field>
        <field name="model">api.session</field>
        <field name="arch" type="xml">
            <tree string="API Session"
                  edit="false"
                  create="false">
                <field name="api_auth_id"
                options="{'no_create': True, 'no_edit': True}"/>
                <field name="auth_token" />
                <field name="auth_token_expiration" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_api_session">
        <field name="name">API session</field>
        <field name="res_model">api.session</field>
        <field name="view_mode">tree</field>
    </record>
    <menuitem
        name="API session"
        parent="base.menu_custom"
        id="api_session"
        action="action_api_session"
    />

</odoo>
