<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="email_template_deadline" model="mail.template">
            <field name="name">Notifiche scadenze</field>
            <field name="model_id" ref="huroos_securo.model_securo_notify"/>
            <field name="email_to"></field>
            <field name="partner_to"></field>
            <field name="subject">Notifiche scadenze</field>
            <field name="body_html">

                <![CDATA[
                    <div style="margin: 0px; padding: 0px;">
                        <p>In questa mail sono presenti i corsi e le visite mediche in scadenza.</p>
                        <p>Cordiali saluti,<br/>
                        ${object.company_id.display_name}</p>
                    </div>
                    ]]>
            </field>
            <field name="report_template" eval="False"/>
            <field name="report_name"></field>
        </record>
    </data>
</odoo>