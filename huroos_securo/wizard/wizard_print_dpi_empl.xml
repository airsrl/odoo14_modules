<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_print_dpi_empl_form_view" model="ir.ui.view">
            <field name="name">wizard_print_dpi_empl_form</field>
            <field name="model">wizard.print.dpi.empl</field>
            <field name="arch" type="xml">
                <form string="Assegna dipendenti">
                    <sheet>
                        <field name="employee_id" invisible="1"/>
                        <group>
                                <field name="date_assign"/>

                                <field name="dpi_ids" >
										<tree>
											<field name="name"/>
											<field name="date_use"/>
											<field name="date_expire"/>
										</tree>
								</field>

                        </group>
                    </sheet>
                    <footer>
                        <button string="Stampa" name="print_consegna_dpi" type="object" default_focus="1" class="btn-primary"/>

                        <button string="Cancella" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>