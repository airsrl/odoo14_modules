<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="securo_employee_duty_form_view" model="ir.ui.view">
            <field name="name">securo_employee_duty.form</field>
            <field name="model">securo.employee.duty</field>
            <field name="arch" type="xml">
                <form string="Mansione dipendente">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Magazziniere..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_ids"
                                       widget="many2many_tags"
                                       options="{'no_create':True}"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="securo_employee_duty_tree_view" model="ir.ui.view">
            <field name="name">securo_employee_duty.tree</field>
            <field name="model">securo.employee.duty</field>
            <field name="arch" type="xml">
                <tree string="Mansione dipendente" editable="bottom">
                    <field name="name" placeholder="Magazziniere..."/>
                    <field name="employee_ids"
                           widget="many2many_tags"
                           options="{'no_create':True}"/>
                </tree>
            </field>
        </record>

        <record id="securo_employee_duty_search_view" model="ir.ui.view">
            <field name="name">securo_employee_duty.search</field>
            <field name="model">securo.employee.duty</field>
            <field name="arch" type="xml">
                <search string="Mansione dipendente">
                    <field name="name"/>
                    <field name="employee_ids"/>
                </search>
            </field>
        </record>

        <record id="securo_employee_duty_act_window" model="ir.actions.act_window">
            <field name="name">Mansione dipendente</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">securo.employee.duty</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Non ci sono record, clicca crea per aggiungere mansione dipendente.
                </p>
            </field>
        </record>

        <menuitem name="Mansione dipendente"
                  id="securo_employee_duty_menu"
                  parent="huroos_securo.menu_hr_config"
                  action="securo_employee_duty_act_window"
                  sequence="2"/>

    </data>
</odoo>