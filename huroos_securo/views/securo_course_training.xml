<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="securo_course_training_form_view" model="ir.ui.view">
            <field name="name">securo_course_training.form</field>
            <field name="model">securo.course.training</field>
            <field name="arch" type="xml">
                <form string="Corso e formazione">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Corso/Formazione"/>
                            </h1>
                        </div>
                        <group>

                            <field name="description" type="Text"/>

                        </group>
                        <group>
                            <group>

                                <field name="periodicity_id" attrs="{'no_create':True}"/>

                                <field name="course_hour" widget="float_time"/>
                             </group>
                        </group>

                        <group>
                            <field name="attachment" widget='many2many_binary'/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="securo_course_training_tree_view" model="ir.ui.view">
            <field name="name">securo_course_training.tree</field>
            <field name="model">securo.course.training</field>
            <field name="arch" type="xml">
                <tree string="Corsi e formazione" >
                    <field name="name"/>
                    <field name="periodicity_id" />
                    <field name="course_hour" widget="float_time"/>

                </tree>
            </field>
        </record>

        <record id="securo_course_training_search_view" model="ir.ui.view">
            <field name="name">securo_course_training.search</field>
            <field name="model">securo.course.training</field>
            <field name="arch" type="xml">
                <search string="Ricerca">
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>

        <record id="securo_course_training_act_window" model="ir.actions.act_window">
            <field name="name">Corso e Formazione</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">securo.course.training</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create"/>
            </field>
        </record>

        <menuitem name="Corsi e formazione"
                  id="securo_course_training_menu"
                  parent="huroos_securo.huroos_securo_main_menu"
                  sequence="3"
                  action="securo_course_training_act_window"/>

    </data>
</odoo>