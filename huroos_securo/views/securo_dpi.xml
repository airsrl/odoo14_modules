<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="securo_dpi_form_view" model="ir.ui.view">
            <field name="name">securo_dpi.form</field>
            <field name="model">securo.dpi</field>
            <field name="arch" type="xml">
                <form string="Dpi">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="duty_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="type_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="securo_dpi_tree_view" model="ir.ui.view">
            <field name="name">securo_dpi.tree</field>
            <field name="model">securo.dpi</field>
            <field name="arch" type="xml">
                <tree string="Dpi" editable="bottom">
                    <field name="category_id"/>
                    <field name="type_id"/>
                    <field name="name" required="1"/>
                    <field name="duty_ids" widget="many2many_tags"/>
                    <field name="duration_id"/>

                </tree>
            </field>
        </record>

        <record id="securo_dpi_search_view" model="ir.ui.view">
            <field name="name">securo_dpi.search</field>
            <field name="model">securo.dpi</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="type_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Tipo" name="type" context="{'group_by':'type_id'}"
                                />

                    </group>
                </search>
            </field>
        </record>

        <record id="securo_dpi_act_window" model="ir.actions.act_window">
            <field name="name">Dpi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">securo.dpi</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Dpi.
                </p>
            </field>
        </record>

        <menuitem name="Dpi"
                  id="securo_dpi_menu"
                  parent="huroos_securo.menu_dpi_config"
                  sequence="5"
                  action="securo_dpi_act_window"/>

    </data>
</odoo>