<odoo>
    <data>
        <record id="ak_distributori_tree_view" model="ir.ui.view">
            <field name="name">ak_distributori.tree</field>
            <field name="model">ak_connettore.distributore</field>
            <field name="arch" type="xml">
                <tree string="Distributori">
                    <field name="contact_id" optional="hide"/>
                    <field name="name"/>
                    <field name="abilitato"/>
                    <field name="url" widget="url"/>
                    <field name="categorie_count" string="Categorie"/>
                    <field name="dropshipping" optional="hide"/>
                    <field name="ultimo_sync"/>
                </tree>
            </field>
        </record>

        <record id="ak_distributori_form_view" model="ir.ui.view">
            <field name="name">ak_distributori.form</field>
            <field name="model">ak_connettore.distributore</field>
            <field name="arch" type="xml">
                <form string="Distributori">
                    <header>
                        <button name="reset_all_distributor_stock" string="Azzera Giacenze" type="object"
                                class="btn btn-primary" attrs="{'invisible': [('abilitato', '=', True)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" >
                           <button
                            name="button_widget_categorie"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-list">
                                <field
                                    name="categorie_count"
                                    widget="statinfo"
                                    string="categorie"
                                    context="{'distributore_id': active_id}"/>
                            </button>
                        </div>

                        <group>
<!--                            <group colspan="2">-->
<!--                                <button string="Aggiorna catalogo prod." name="distributore_sync_products" type="object" />-->
<!--                            </group>-->
                            <group string="Dati distributore">
                                <field name="name"/>
                                <field name="contact_id"/>
                                <field name="abilitato"/>
                                <field name="id_anag"/>
                                <field name="gg_spec"/>
                                <field name="dropshipping"/>
                            </group>
                            <group string="Riferimenti sync">
                                <field name="ultimo_sync"/>
                                <field name="url"/>
                                <field name="host"/>
                                <field name="directory"/>
                                <field name="login"/>
                                <field name="password" password="True"/>
                            </group>
                            <group colspan="2" string="Note">
                                <field name="note" nolabel="1" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="ak_distributori_search_view" model="ir.ui.view">
            <field name="name">ak_distributori.search</field>
            <field name="model">ak_connettore.distributore</field>
            <field name="arch" type="xml">
                <search string="Cerca">
                    <field name="name"/>
                    <field name="contact_id"/>
                    <field name="login"/>
                </search>
            </field>
        </record>
    </data>
</odoo>