<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="huroos_account_due_list_form_inherit" model="ir.ui.view">
            <field name="name">account_due_list.form</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account_due_list.view_payments_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_maturity']" position="after">
                    <field name="payment_info" optional="show"/>
                    <field name="payment_info_ids" widget="many2many_tags" optional="hide"/>
                </xpath>
            </field>
        </record>
        <!-- Inherit Form View to Modify it -->
        <record id="huroos_view_payments_filter_inherit" model="ir.ui.view">
            <field name="name">view_payments_filter.search.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account_due_list.view_payments_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//search" position="inside">
                    <filter name="group_by_payment_date" string="Pagata" domain="[('payment_date','!=',False)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>